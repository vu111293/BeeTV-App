<resources>
    <declare-styleable name="ScrollChildSwipeRefreshLayout">
        <attr name="refreshing" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CategoryItemView">
        <attr name="categoryName" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>
    <declare-styleable name="FuctionItemView">
        <attr name="functionName" format="string" />
        <attr name="functionIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="SmoothHorizontalScrollView">
        <attr name="fadingEdge" format="integer" />

    </declare-styleable>

    <declare-styleable name="MetroItemRound">
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="radius"  format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="CornerVew">
        <attr name="cv_text" format="string" />
        <attr name="cv_text_color" format="color" />
        <attr name="cv_text_size" format="dimension" />
        <attr name="cv_text_bold" format="boolean" />
        <attr name="cv_text_all_caps" format="boolean" />
        <attr name="cv_background_color" format="color" />
        <attr name="cv_min_size" format="dimension" />
        <attr name="cv_padding" format="dimension" />
        <attr name="cv_gravity" format="enum">
            <enum name="TOP_LEFT" value="51" />
            <enum name="TOP_RIGHT" value="53" />
            <enum name="BOTTOM_LEFT" value="83" />
            <enum name="BOTTOM_RIGHT" value="85" />
        </attr>
        <attr name="cv_fill_triangle" format="boolean" />
    </declare-styleable>
</resources>
