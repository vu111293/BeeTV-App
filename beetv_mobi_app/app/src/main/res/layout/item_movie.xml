<?xml version="1.0" encoding="utf-8"?>
<com.example.android.architecture.blueprints.todoapp.widgets.metro.MetroItemFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view"
    android:layout_width="208dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:focusable="true"
    app:radius="4dp">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.example.android.architecture.blueprints.todoapp.widgets.metro.CornerVew
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:tag="top"
        cv:cv_background_color="#5EB335"
        cv:cv_fill_triangle="true"
        cv:cv_gravity="TOP_LEFT"
        cv:cv_text="VIP"
        cv:cv_text_size="15sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:gravity="center|left"
        android:padding="15px"
        android:text="魔兽：最强游戏IP电影"
        android:textColor="@color/white"
        android:textSize="18dp" />
</com.example.android.architecture.blueprints.todoapp.widgets.metro.MetroItemFrameLayout>